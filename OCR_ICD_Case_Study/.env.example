
# Copy this file to .env and fill with YOUR real values.
# Do NOT commit .env with secrets to GitHub.

# Azure OCR (Vision Read API v3.2)
AZURE_OCR_ENDPOINT=https://YOUR_RESOURCE_NAME.cognitiveservices.azure.com
AZURE_OCR_KEY=YOUR_AZURE_OCR_KEY

# OpenAI
OPENAI_API_KEY=YOUR_OPENAI_API_KEY
EMBEDDING_MODEL=text-embedding-3-small
LLM_MODEL=gpt-4o-mini

# Supabase Postgres URL (for pgvector) - optional
# Example: postgresql://postgres:password@your-project.supabase.co:5432/postgres
SUPABASE_URL=postgresql://postgres:password@your-project.supabase.co:5432/postgres

# Feature flags
# Start with Azure OCR mocked (no external calls). Set to false when ready.
USE_MOCK_OCR=true
# You have OpenAI key, so by default we use real LLM (false = use real).
USE_MOCK_LLM=false
# If true, and pgvector is enabled on Supabase, we use PGVector instead of FAISS.
USE_PG_VECTOR=false
